<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Acervo_Leitor</title>

    <script type="importmap"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/homestyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Acervo_Leitor.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/images/LogoAcervo.png" height="40" />
                </a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="app-layout">

        <!-- SIDEBAR -->
        <nav class="sidebar">
            <ul class="nav flex-column pt-3">
                <li class="nav-item px-2">
                    <a class="nav-link" asp-controller="Turmas" asp-action="Index">🏫 Turmas</a>
                </li>
                <li class="nav-item px-2">
                    <a class="nav-link" asp-controller="Alunos" asp-action="Index">👨‍🎓 Alunos</a>
                </li>
                <li class="nav-item px-2">
                    <a class="nav-link" asp-controller="Livros" asp-action="Index">📚 Livros</a>
                </li>
                <li class="nav-item px-2">
                    <a class="nav-link" asp-controller="Emprestimos" asp-action="Index">🔄 Empréstimos</a>
                </li>
            </ul>
        </nav>

        <!-- CONTEÚDO PRINCIPAL -->
        <div class="content-wrapper">

            <main class="main-content">
                @RenderBody()
            </main>

            <footer class="footer text-muted text-center">
                &copy; 2026 - Acervo_Leitor - Luahr Rocha
            </footer>

        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
