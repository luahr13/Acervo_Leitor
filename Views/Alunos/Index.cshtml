@model IEnumerable<Acervo_Leitor.Models.Aluno>

@{
    ViewData["Title"] = "Alunos";

    var currentBusca = Context.Request.Query["busca"].ToString();
    var currentAtivo = Context.Request.Query["ativo"].ToString();
    string[] statusOptions = new[] { "Todos", "Ativos", "Inativos" };
}

<!-- HEADER -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold">👨‍🎓 Alunos</h2>

    <a asp-action="Create" class="btn btn-primary shadow-sm">
        ➕ Novo Aluno
    </a>
</div>

<!-- FILTROS -->
<div class="card shadow-sm mb-3">
    <div class="card-body">

        <form method="get" class="d-flex align-items-end gap-3" id="filterForm">

            <!-- BUSCA -->
            <div style="width:220px;">
                <label class="form-label">Nome do aluno</label>
                <input type="text"
                       name="busca"
                       value="@currentBusca"
                       class="form-control form-control-sm"
                       placeholder="Buscar aluno..." />
            </div>

            <!-- BOTÕES -->
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success btn-sm px-3">
                    🔍 Filtrar
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">
                    ❌ Limpar
                </a>
            </div>

            <!-- STATUS -->
            <div class="ms-auto" style="width:150px;">
                <label class="form-label">Status</label>
                <select name="ativo"
                        class="form-select form-select-sm"
                        onchange="document.getElementById('filterForm').submit();">

                    @foreach (var s in statusOptions)
                    {
                        if ((s == "Todos" && string.IsNullOrEmpty(currentAtivo)) ||
                        (s == "Ativos" && currentAtivo == "true") ||
                        (s == "Inativos" && currentAtivo == "false"))
                        {
                            <option value="@(s == "Ativos" ? "true" : s == "Inativos" ? "false" : "")" selected>@s</option>
                        }
                        else
                        {
                            <option value="@(s == "Ativos" ? "true" : s == "Inativos" ? "false" : "")">@s</option>
                        }
                    }
                </select>
            </div>
        </form>

    </div>
</div>

<!-- TABELA -->
<div class="card shadow-sm">
    <div class="card-body p-0">

        <table class="table table-hover table-striped align-middle mb-0">
            <thead class="table-custom">
                <tr>
                    <th>Nome</th>
                    <th>Turma</th>
                    <th>Telefone</th>
                    <th>Status</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var aluno in Model)
                {
                    <tr>
                        <td class="fw-semibold">@aluno.Nome</td>
                        <td>@aluno.Turma?.Nome</td>
                        <td>@aluno.Telefone</td>

                        <td>
                            @if (aluno.Ativo)
                            {
                                <span class="badge bg-success">Ativo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inativo</span>
                            }
                        </td>

                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@aluno.Id" class="btn btn-sm btn-warning">
                                ✏️ Editar
                            </a>

                            <a asp-action="Details" asp-route-id="@aluno.Id" class="btn btn-sm btn-info text-white">
                                🔍 Detalhes
                            </a>

                            <a asp-action="Delete" asp-route-id="@aluno.Id" class="btn btn-sm btn-danger">
                                🗑️ Deletar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

<!-- PAGINAÇÃO -->
@{
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
}

@if (totalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">

            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(currentPage - 1)"
                   asp-route-busca="@currentBusca"
                   asp-route-ativo="@currentAtivo">‹</a>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-busca="@currentBusca"
                       asp-route-ativo="@currentAtivo">@i</a>
                </li>
            }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(currentPage + 1)"
                   asp-route-busca="@currentBusca"
                   asp-route-ativo="@currentAtivo">›</a>
            </li>

        </ul>
    </nav>
}