@model Acervo_Leitor.Models.Emprestimo

@{
    ViewData["Title"] = "Create";
}

<h1>Novo emprestimo</h1>

<h4>Emprestimo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlunoId"></label>
                <select id="AlunoId" asp-for="AlunoId" asp-items="ViewBag.AlunoId" class="form-select">
                    <option value="">-- Selecione o aluno --</option>
                </select>
                <span asp-validation-for="AlunoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LivroId"></label>
                <select id="LivroId" asp-for="LivroId" asp-items="ViewBag.LivroId" class="form-select">
                    <option value="">-- Selecione o livro --</option>
                </select>
                <span asp-validation-for="LivroId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataEmprestimo" class="control-label"></label>
                <input asp-for="DataEmprestimo" class="form-control" />
                <span asp-validation-for="DataEmprestimo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataPrevistaDevolucao" class="control-label"></label>
                <input asp-for="DataPrevistaDevolucao" class="form-control" />
                <span asp-validation-for="DataPrevistaDevolucao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#AlunoId').select2({
                placeholder: "Digite o nome do aluno",
                allowClear: true
            });

            $('#LivroId').select2({
                placeholder: "Digite o nome do livro",
                allowClear: true
            });
        });
    </script>
}
